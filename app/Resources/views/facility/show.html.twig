{% extends 'base.html.twig' %}

{% block body %}
    <h1>Facility</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facility.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ facility.name }}</td>
            </tr>
            <tr>
                <th>Shortname</th>
                <td>{{ facility.shortName }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ facility.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ facility.city }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ facility.state }}</td>
            </tr>
            <tr>
                <th>Zip</th>
                <td>{{ facility.zip }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('facility_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('facility_edit', { 'id': facility.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
